<% title "Packages" %>

<table>
  <tr>
    <th><%= sort :name %></th>
    <th><%= sort :version %></th>
    <th><%= sort :host_id, :as => 'Host' %></th>
  </tr>
  <% for package in @packages %>
    <tr>
      <td><%= package.name %></td>
      <td><%= package.version %></td>
      <td><%= package.host %></td>
      <td><%= link_to "Show", package %></td>
      <td><%= link_to "Edit", edit_package_path(package) %></td>
      <td><%= link_to "Destroy", package, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Package", new_package_path(package) %></p>
